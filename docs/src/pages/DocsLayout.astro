---
import {DocsPage} from "ftc-panels/docs"
import {modules} from "../data";
---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>Library Modules with Docs</title>
</head>
<body>
<style is:global>

    :root {
        --bgDark: #0b0d0d;
        --bgMedium: #212222;
        --bgLight: #363737;
        --text: #ffffff;
        --padding: 1rem;

        --primaryRed: #e60012;
        --primaryBlue: #005bac;

        --primary: #e60012;
        --primary: #005bac;
    }

    body,
    html {
        margin: 0;
        padding: 0;
    }

    body.blue {
        --primary: #005bac;
    }
    body.red {
        --primary: #e60012;
    }

    *,
    *::after,
    *::before {
        box-sizing: border-box;
    }

    body {
        background-color: var(--bgDark);
        padding: 0;
        margin: 0;

        color: var(--text);

        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica,
        Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        font-weight: 300;
    }

    ::-webkit-scrollbar {
        width: 6px;
        height: 6px;
    }

    ::-webkit-scrollbar-thumb {
        background-color: var(--bgLight);
        border-radius: 6px;
    }

    ::-webkit-scrollbar-track {
        background: transparent;
    }

    a {
        color: currentColor;
        display: inline-block;
    }
</style>
<style>
    body {
        overflow-y: auto;
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>
    <DocsPage plugins={modules} client:load >
        <slot />
    </DocsPage>
</body>
</html>
