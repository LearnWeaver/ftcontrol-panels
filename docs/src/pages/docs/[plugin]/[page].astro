---
import DocsLayout from "../../DocsLayout.astro";
import {modules} from "../../../data";
const { plugin, page } = Astro.params;

export function getStaticPaths() {
    const paths = []
    for(const m of modules) {
        const docs = m.docs

        const plugin = m.id

        for(const c of docs.chapters) {
            const page = c.name
            paths.push(
                { params: { plugin, page } }
            )
        }
    }
    return paths
}

import {
    SimpleDynamicComponent,
} from "ftc-panels"

const data = modules.find((p) => p.id === plugin)
---

<DocsLayout>
    <SimpleDynamicComponent
            client:load
            info={plugin}
            textContent={data.docs.chapters.find(it => it.name == page).textContent}
    />
</DocsLayout>