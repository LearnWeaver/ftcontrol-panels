---
import {modules} from "../../../data";
const { plugin } = Astro.params;
import DocsLayout from "../../DocsLayout.astro";

export function getStaticPaths() {
    const paths = []
    for(const m of modules) {
        const plugin = m.id
        paths.push(
            { params: { plugin } }
        )
    }
    return paths
}
import {
    SimpleDynamicComponent,
} from "ftc-panels"

const data = modules.find((p) => p.id === plugin)
---

<DocsLayout>
    <SimpleDynamicComponent
            client:load
            info={plugin}
            textContent={data.docs.homepage.textContent}
    />
</DocsLayout>