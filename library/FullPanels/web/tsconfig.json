{
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["svelte"],
    "verbatimModuleSyntax": true
  },
  "include": ["src/*", "src/*/*"]
}
